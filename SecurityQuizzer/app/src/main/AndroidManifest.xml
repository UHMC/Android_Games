            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Question1"
            android:label="@string/title_activity_question1"
            android:parentActivityName=".MainEntryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="educybersecurity.hawaii.maui.securityquizzer.MainEntryActivity" />
        </activity>
        <activity
            android:name=".Question2"
