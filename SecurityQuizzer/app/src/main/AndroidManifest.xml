            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="educybersecurity.hawaii.maui.securityquizzer.Question1" />
        </activity>
        <activity
            android:name=".Question3"
            android:label="@string/title_activity_question3"
            android:parentActivityName=".Question2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="educybersecurity.hawaii.maui.securityquizzer.Question2" />
        </activity>
        <activity
            android:name=".Question4"
            android:label="@string/title_activity_question4"
            android:parentActivityName=".Question3"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="educybersecurity.hawaii.maui.securityquizzer.Question3" />
        </activity>
        <activity
